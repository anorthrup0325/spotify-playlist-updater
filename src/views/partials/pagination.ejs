<nav class="ml-auto mr-auto" aria-label="Pagination for <%= paginationRootUrl %>">
    <ul class="pagination justify-content-center mt-0 mb-0">

        <% if (page > 1) { %>
        <li class="page-item">
            <% } else { %>
        <li class="page-item disabled">
            <% } %>
            <a class="page-link" href="<%= paginationRootUrl %>/<%= page - 1 %>">Previous</a>
        </li>

        <% for (let i = 1; i <= maxPage; i++) { %>
        <% if (i === page) { %>
        <li class="page-item active">
            <span class="page-link">
                <%= page %>
                <span class="sr-only">(current)</span>
            </span>
        </li>
        <% } else { %>
        <li class="page-item">
            <a class="page-link" href="<%= paginationRootUrl %>/<%= i %>"><%= i %></a>
        </li>
        <% } %>
        <% } %>

        <% if (page < maxPage) { %>
        <li class="page-item">
            <% } else { %>
        <li class="page-item disabled">
            <% } %>
            <a class="page-link" href="<%= paginationRootUrl %>/<%= page + 1 %>">Next</a>
        </li>

    </ul>
</nav>