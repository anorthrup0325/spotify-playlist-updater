{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "sourceMap": true,
        "target": "es6",
        "types": [
            "bootstrap",
            "jquery"
        ]
    },
    "include": [
        "src/**/*"
    ]
}